<odoo>
  <data>
    <record id="ir_cron_post_call_payment_transaction" model="ir.cron">
      <field name="name">Job to fetch Transaction Settlement Data</field>
      <field name="model_id" ref="payment.model_payment_transaction" />
      <field name="state">code</field>
      <field name="code">model.cron_send_payment_transaction_post_call()</field>
      <field name="interval_number">1</field>
      <field name="interval_type">days</field>
      <field name="nextcall" eval="(DateTime.utcnow().replace(hour=6, minute=30, second=0, microsecond=0)).strftime('%Y-%m-%d %H:%M:%S')" />
      <field name="active" eval="True" />
    </record>
  </data>
</odoo>